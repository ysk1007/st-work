<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script>
	/*
		숫자
		문자열
		불
	*/
	let str = 'goodee academy';
	console.log(str);
	
	str = "Goodee Academy";
	console.log(str);
	
	str = "test'test";
	
	// 백틱 키워드를 사용하면 멀티라인 문자여 표현이 가능
	str = `goodee 
		academy`;
	console.log(str);
	
	let x = 5;
	let y = 7;
	console.log(x + '*' + y + '=' + x*y);
	
	// 2) 백틱 문자열은 문자열안에 표현식 사용이 가능 - jsp에서 사용하면 EL과 충돌
	console.log(`${x} * ${y} = ${x*y}`);
	
	let name = "구디";
	console.log('당신의 이름은 ' + name + '입니다');
	
	console.log(`당신의 이름은 ${name} 입니다.`);
	
	// 자바 스크립트의 문자열은 인덱스가 존재
	console.log(name[0]);	// 구
	console.log(name[1]);	// 디
	console.log(name.length);
	console.log('문자열 길이',name.length);
	
	
	console.log(4/2);
	console.log(5/2);
	console.log(5.0/2);
	console.log(5%2);
</script>
</head>
<body>
	
</body>
</html>