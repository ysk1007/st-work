<body>
	<script>
		let isLeapYear = function(year){
			return (year % 4 == 0) && (year % 100 != 0) || (year % 400 == 0);
		};	// 입력값이 숫자 하나이고, 매개값 bool
		
		console.log('2020년',isLeapYear(2020));
		console.log('2010년',isLeapYear(2010));
		console.log('년',isLeapYear());
		
		let sumAll = function(a,b){
			let output = 0;
			for(let i = a ; i <= b ; i++){
				output += i;
			}
			return output;
		};// 숫자 2개 입력, 숫자하나 반환
		console.log('7~50합',sumAll(7,50));
		
		// 최솟값, 최댓값
		let min = function(array){
			let output = array[0];
			for(let item of array){
				if(output > item){
					output = item;
				}
			}
			return output;	// 최솟값
		}
		console.log(min([3,5,7,1,2,9]));
		
		let max = function(array){
			let output = array[0];
			for(let item of array){
				if(item > output){
					output = item;
				}
			}
			return output;	// 최댓값
		}
		console.log(max([3,5,7,1,2,9]));
		
		// 가변매개변수
		let sample = function(...args){
			for(let a of args){
				console.log(a);
			}	
		}
		sample(3,4,'a',7);
		
		// 가변인수
		let sample2 = function(...args){
			for(let a of args){
				console.log(a,':',a % 2 == 0);
			}
		}
		
		sample2(3,4,8,7);
		
		sample2([2,3,4,5]);
		
		let a = [2,3,4,5];
		//sample(a[0],a[1],a[2],a[3]);
		
		sample(...a);	// 전개 연산자
		sample(...[7,17,27,9]);
		
		let earning = function(name, wage=8590, hours=40){
			console.log(name);
			console.log(name);
			console.log(name);
		}
		
	</script>
</body>
