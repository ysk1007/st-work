</head>
<body>
	<button type="button" onclick='lotto()'>로또번호생성</button>
	<hr>
	<textarea rows="1" cols="50" id="lottoNumber">
	
	</textarea>
	<script>
		let lotto = function(){
			let balls = new Array(45);
			for(let i = 0 ; i < balls.length ; i++){
				balls[i] = i+1;	// 1 ~ 45
			}
			console.log(balls); // 초기화 1 ~ 45
			
			
			// shuffle
			// TODO balls shuffle... Math.random()....
			for(let j = 0 ; j < 999999 ; j++){
				let ran = (Math.random() * 45) + 1;
				temp = balls[0];
				balls[0] = balls[ran];
				balls[ran] = temp;
			}
			
			let result = balls.slice(0, 6);	// index 0값 ~ index 5값
			
			let output = '';
			for(let i = 0 ; i < result.length ; i++){
				output += result[i] + ' ';
			}
			
			
			
			document.querySelector('#lottoNumber').value = output;
		} 
	</script>
</body>
</html>